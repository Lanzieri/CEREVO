    const WEEK_TO_MONTH = 4.33;
    const recalc = () => {
      const t = Math.max(0, Number(tasks.value||0));
      const m = Math.max(0, Number(minutes.value||0));
      const r = Math.max(0, Number(rate.value||0));
      const hours = ((t*m)/60)*WEEK_TO_MONTH;
      outH.textContent = hours.toFixed(1);
      outS.textContent = (hours*r).toFixed(0);
    };
    [tasks, minutes, rate].forEach(i => i.addEventListener('input', recalc));
    document.querySelectorAll('.js-open-calc').forEach(btn=>{
      btn.addEventListener('click', ()=>{
        title.textContent = `Calculador de ahorro — ${btn.dataset.service||'General'}`;
        recalc(); modal.showModal();
      });
    });
    modal?.addEventListener('click', e=>{
      const card = modal.querySelector('.calc-card').getBoundingClientRect();
      const o = e.clientX<card.left||e.clientX>card.right||e.clientY<card.top||e.clientY>card.bottom;
      if(o) modal.close();
    });
    modal?.querySelector('.calc-close')?.addEventListener('click', ()=>modal.close());

    // Desplegables "Ver detalles"
    document.querySelectorAll('.service-card').forEach(card=>{
      card.querySelector('.js-toggle-details')?.addEventListener('click', ()=>{
        card.classList.toggle('open');
      });
    });

    // Aparición suave + contadores en badges
    const appear = new IntersectionObserver((entries)=>{
      entries.forEach(e=>{
        if(e.isIntersecting){
          e.target.classList.add('in');
          // animate counters inside this card only once
          e.target.querySelectorAll('.metric').forEach(el=>{
            if(el.dataset.animated) return;
            el.dataset.animated = '1';
            const to = Number(el.dataset.to||0);
            let cur = 0;
            const step = Math.max(1, Math.ceil(to/40));
            const tick = () => {
              cur = Math.min(cur+step, to);
              el.textContent = cur;
              if(cur < to) requestAnimationFrame(tick);
            };
            requestAnimationFrame(tick);
          });
          appear.unobserve(e.target);
        }
      });
    }, {threshold: .2});
    document.querySelectorAll('.service-card.js-reveal').forEach(el=>appear.observe(el));
  </script>
</section>


