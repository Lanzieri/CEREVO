---
const {
  title = "Dala Inc — Automatizaciones con IA",
  description = "Automatiza procesos y escala tu negocio con IA y n8n",
} = Astro.props;

const year = new Date().getFullYear();

import "../styles/global.css";
import logoUrl from "../assets/dala-logo.jpg"; // asset base-safe
---
<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- SEO básico -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="og-image.jpg" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="theme-color" content="#C02F8B" />

    <!-- Favicons -->
    <link rel="icon" href="favicon.svg" type="image/svg+xml" />
    <link rel="icon" href="favicon-32.png" sizes="32x32" />
    <link rel="icon" href="favicon-192.png" sizes="192x192" />
    <link rel="apple-touch-icon" href="apple-touch-icon.png" sizes="180x180" />
  </head>

  <body class="antialiased text-white bg-[#0a0a0a]">
    <header class="border-b bg-black/40 backdrop-blur-lg">
      <div class="max-w-6xl mx-auto px-4 h-16 flex items-center justify-between">
        <a href="." class="inline-flex items-center gap-3">
          <img src={logoUrl} alt="Dala Inc" class="h-7 w-auto" />
          <span class="sr-only">Dala Inc</span>
        </a>
        <nav class="hidden sm:flex gap-6 text-sm">
          <a href="#beneficios" class="hover:opacity-75">Beneficios</a>
          <a href="#servicios" class="hover:opacity-75">Servicios</a>
          <a href="#como-trabajamos" class="hover:opacity-75">Proceso</a>
          <a href="#contacto" class="hover:opacity-75">Contacto</a>
        </nav>
        <a href="#contacto" class="btn-primary text-sm">Empezar</a>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="mt-20 border-t">
      <div class="max-w-6xl mx-auto px-4 py-10 text-sm text-zinc-500 flex flex-col sm:flex-row gap-2 sm:gap-0 sm:items-center justify-between">
        <p>© {year} Dala Inc</p>
        <p>Automatización · IA · n8n · Integraciones</p>
      </div>
    </footer>

    <script>
  // ======== SCROLL REVEAL ========
  const appear = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('is-visible');
        appear.unobserve(entry.target);

        // ✅ CORRECCIÓN CLAVE: Selecciona el SVG dentro de .icon-visual
        const icon = entry.target.querySelector('.icon-visual svg');
        if (icon) {
          icon.classList.add('svg-is-visible'); // ← Esto activa la animación
        }

        // Anima título y métrica
        const title = entry.target.querySelector('.benefit-title');
        if (title) title.classList.add('is-visible');

        const metric = entry.target.querySelector('.metric');
        if (metric) metric.classList.add('is-visible');
      }
    });
  }, { threshold: 0.1 });

  document.querySelectorAll('.js-reveal').forEach(el => appear.observe(el));

  // ======== CONTADORES ========
  const counters = document.querySelectorAll('.metric[data-to]');
  counters.forEach(el => {
    const to = Number(el.dataset.to || 0);
    const start = performance.now();
    const dur = 900;

    const step = (t) => {
      const p = Math.min(1, (t - start) / dur);
      const value = Math.round(to * (1 - Math.pow(1 - p, 3)));
      el.textContent = value.toString();
      if (p < 1) requestAnimationFrame(step);
    };
    requestAnimationFrame(step);
  });

  // ======== SPOTLIGHT SIGUE EL MOUSE ========
  const spotlight = document.querySelector('.spotlight');
  if (spotlight) {
    document.addEventListener('mousemove', (e) => {
      const x = e.clientX / window.innerWidth;
      const y = e.clientY / window.innerHeight;
      spotlight.style.transform = `translate(${x * 100 - 50}px, ${y * 100 - 50}px)`;
    });
  }

  // ======== PREVENT REDUCED MOTION ========
  if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
    document.documentElement.style.setProperty('--animation-speed', '0ms');
    document.querySelectorAll('[class*="animate-"]').forEach(el => {
      el.style.animation = 'none';
    });
  }

  // ======== FORM SUBMIT ========
  const form = document.querySelector('#contacto form');
  if (form) {
    form.addEventListener('submit', (e) => {
      e.preventDefault();
      const formData = new FormData(form);
      alert('¡Gracias por tu mensaje! Nos pondremos en contacto en 48 hs.');
      form.reset();
    });
  }
</script>